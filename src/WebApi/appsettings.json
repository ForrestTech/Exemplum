{
  "ConnectionStrings": {
    "Default": "Server=(localdb)\\mssqllocaldb;Database=Exemplum;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "WeatherForecast": {
    "BaseAddress": "http://api.openweathermap.org/"
  },
  "UseInMemoryStorage": true,
  "AllowedHosts": "*",
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Exemplum API",
        "Uri": "https://localhost:5001/health/ready"
      }
    ],
    "EvaluationTimeinSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "Auth0": {
    "Authority": "https://dev-ememplum.eu.auth0.com",
    "ApiIdentifier": "https://exemplumapi.com"
  }
}
